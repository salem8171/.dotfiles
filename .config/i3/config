# vim: ft=i3config

set $mod Mod4

font pango:monospace 11
title_align center

exec --no-startup-id dex --autostart --environment i3

focus_follows_mouse no

floating_modifier $mod
for_window [title=".*Android Emulator.*"] floating enable
for_window [title="popup-terminal"] floating enable
for_window [title="popup-terminal"] resize set 1000 500
for_window [title="popup-terminal"] move position center

for_window [class="antimicrox"] floating disable
for_window [class="copyq"] floating enable
for_window [title="copyq"] resize set 1000 500
for_window [title="copyq"] move position center

for_window [title="Assassin's Creed.*Unity"] floating disable
for_window [title="Assassin's Creed Rogue"] fullscreen disable
for_window [title="Hades"] fullscreen disable
for_window [title="FINAL FANTASY"] floating disable
for_window [title="masterduel"] floating disable
for_window [title="Super Mario Bros*"] floating disable

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Ctrl+h resize shrink width 1 px or 1 ppt
bindsym $mod+Ctrl+j resize grow height 1 px or 1 ppt
bindsym $mod+Ctrl+k resize shrink height 1 px or 1 ppt
bindsym $mod+Ctrl+l resize grow width 1 px or 1 ppt

bindsym $mod+slash split h
bindsym $mod+minus split v

# workspace_layout tabbed
bindsym $mod+t layout toggle splith splitv tabbed

bindsym $mod+u focus parent
bindsym $mod+Shift+u focus child

bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

gaps inner 15
for_window [class="^.*"] border pixel 2

# class                 border  backgr. text    indicator child_border
client.focused          #76715e #76715e #acada1 #76715e   #76715e
client.focused_inactive #23241e #23241e #76715e #23241e   #23241e
client.unfocused        #23241e #23241e #76715e #23241e   #23241e
client.urgent           #23241e #cb376b #ffffff #cb376b   #cb376b
client.placeholder      #23241e #23241e #76715e #23241e   #23241e

client.background       #272822

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4

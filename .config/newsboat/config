###############################################################################
# General
###############################################################################
auto-reload yes
reload-threads 4
cleanup-on-quit yes
scrolloff 10

browser "setsid -f mimeo --assoc ~/.config/newsboat/mimeo-assoc.txt %u"

always-display-description yes
bookmark-interactive yes
display-article-progress yes
external-url-viewer ""
goto-first-unread true
history-limit 1000
html-renderer "internal"
ignore-mode "download"
keep-articles-days 0
max-downloads 4
notify-format "Newsboat: finished reload, %f unread feeds (%n unread articles total)"
notify-program ""
pager "internal"
player ""
save-path "~/"
search-highlight-colors "black" "yellow" "bold"
show-keymap-hint yes
show-title-bar yes
text-width 80


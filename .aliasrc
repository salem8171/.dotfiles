# vim: set ft=bash :

alias ls='ls --color=auto'
alias grep='grep --colour=auto'
alias egrep='egrep --colour=auto'
alias fgrep='fgrep --colour=auto'

alias df='dfc'
alias free='free -m'
alias ll='ls -hl'

alias desktop-mac=74:27:ea:6b:91:c3
alias wake-desktop="wol 74:27:ea:6b:91:c3"
alias poweroff-desktop="ssh salem-desktop-pc.local poweroff"
alias ssh-desktop="ssh salem-desktop-pc.local"
alias barrier-desktop="barrierctl connect salem-desktop-pc.local"
alias barrier-desktop-disconnect="barrierctl disconnect salem-desktop-pc.local"

ghc () { git clone git@github.com:$@ }
glc () { git clone git@gitlab.com:$@ }
